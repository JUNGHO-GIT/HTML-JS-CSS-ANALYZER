{
	"name": "html-js-css-analyzer",
	"displayName": "html-js-css-analyzer",
	"description": "CSS(unused selectors), HTML(lint), JavaScript(lint) analyzer extension for VsCode.",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"version": "2.5.2",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/HTML-JS-CSS-ANALYZER.git"
	},
	"engines": {
		"vscode": "^1.105.0",
		"node": ">=18.0.0",
		"npm": ">=10.0.0"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"css",
		"html",
		"javascript",
		"typescript",
		"jshint",
		"htmlhint",
		"intellisense",
		"diagnostics",
		"unused",
		"selectors"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:scss",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:javascriptreact",
		"onLanguage:typescriptreact",
		"onCommand:html-js-css-analyzer.validate",
		"onCommand:html-js-css-analyzer.clear"
	],
	"contributes": {
		"commands": [
			{
				"command": "html-js-css-analyzer.validate",
				"title": "html-js-css-analyzer: Validate Current Document"
			},
			{
				"command": "html-js-css-analyzer.clear",
				"title": "html-js-css-analyzer: Clear Style Cache"
			}
		],
		"configuration": {
			"title": "html-js-css-analyzer",
			"properties": {
				"html-js-css-analyzer.logLevel": {
					"type": "string",
					"scope": "window",
					"enum": [
						"off",
						"error",
						"info",
						"debug"
					],
					"default": "debug"
				},
				"html-js-css-analyzer.exclude": {
					"type": "array",
					"scope": "resource",
					"default": [
						"**/node_modules/**",
						"**/.git/**",
						"**/dist/**",
						"**/out/**",
						"**/.svn/**",
						"**/.hg/**",
						"**/CVS/**",
						"**/.idea/**",
						"**/.vscode/**",
						"**/.settings/**",
						"**/.metadata/**",
						"**/.history/**",
						"**/.backup/**",
						"**/.etc/**",
						"**/.cache/**",
						"**/.gradle/**",
						"**/.mvn/**",
						"**/bin/**",
						"**/build/**",
						"**/target/**",
						"**/logs/**",
						"**/.pytest_cache/**",
						"**/.scannerwork/**",
						"**/.terraform/**",
						"**/__pycache__/**",
						"**/.venv/**",
						"**/.classpath",
						"**/.project",
						"**/.factorypath",
						"**/.DS_Store",
						"**/Thumbs.db",
						"**/desktop.ini",
						"**/.coverage"
					],
					"items": {
						"type": "string"
					}
				},
				"html-js-css-analyzer.additionalExtensions": {
					"type": "array",
					"scope": "window",
					"default": [
						"html",
						"htm",
						"css",
						"scss"
					],
					"items": {
						"type": "string"
					}
				},
				"html-js-css-analyzer.htmlHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable HTML analysis and hints"
				},
				"html-js-css-analyzer.cssHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable CSS analysis and hints"
				},
				"html-js-css-analyzer.jsHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable JavaScript analysis and hints"
				},
				"html-js-css-analyzer.tsHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable TypeScript analysis and hints"
				}
			}
		}
	},
  "scripts": {
    "watch": "node .node/swc.cjs --watch",
    "compile": "node .node/swc.cjs --compile",
    "reset": "node .node/reset.cjs --pnpm",
    "gcloud": "node .node/gcloud.cjs --only-git",
    "autofix": "node .node/autofix.cjs",
    "vsce": "node .node/vsce.cjs"
  },
	"dependencies": {
		"@babel/core": "^7.28.5",
    "@swc/helpers": "^0.5.17",
		"htmlhint": "^1.7.1",
		"jshint": "^2.13.6",
    "minimatch": "^10.1.1",
    "terser": "^5.44.1"
	},
	"devDependencies": {
		"@types/jshint": "^2.12.4",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.0",
		"@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
		"@types/htmlhint": "^1.1.5",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.26.0",
		"eslint": "^9.39.1",
		"rimraf": "^6.1.0",
		"mocha": "^11.7.5",
    "ts-morph": "^27.0.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "ts-prune": "^0.10.3"
	}
}
