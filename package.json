{
	"name": "html-js-css-analyzer",
	"displayName": "Html-Js-Css-Analyzer",
	"description": "Analyzes HTML & CSS: unused selectors + HTML lint (HTMLHint) + JavaScript lint (JSHint) in your HTML/JS/TS/CSS files.",
	"publisher": "JUNGHO",
	"icon": "logo_image.png",
	"license": "Apache-2.0",
	"type": "module",
	"version": "2.4.2",
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/JUNGHO-GIT/HTML-JS-CSS-ANALYZER.git"
	},
	"engines": {
		"vscode": "^1.104.0",
		"node": ">=18.0.0",
		"npm": ">=10.0.0"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"css",
		"html",
		"javascript",
		"typescript",
		"jshint",
		"htmlhint",
		"intellisense",
		"diagnostics",
		"unused",
		"selectors"
	],
	"activationEvents": [
		"onStartupFinished",
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:scss",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:javascriptreact",
		"onLanguage:typescriptreact",
		"onCommand:Html-Js-Css-Analyzer.validate",
		"onCommand:Html-Js-Css-Analyzer.clear"
	],
	"contributes": {
		"commands": [
			{
				"command": "Html-Js-Css-Analyzer.validate",
				"title": "Html-Js-Css-Analyzer: Validate Current Document"
			},
			{
				"command": "Html-Js-Css-Analyzer.clear",
				"title": "Html-Js-Css-Analyzer: Clear Style Cache"
			}
		],
		"configuration": {
			"title": "Html-Js-Css-Analyzer",
			"properties": {
				"Html-Js-Css-Analyzer.logLevel": {
					"type": "string",
					"scope": "window",
					"enum": [
						"off",
						"error",
						"info",
						"debug"
					],
					"default": "debug"
				},
				"Html-Js-Css-Analyzer.exclude": {
					"type": "array",
					"scope": "resource",
					"default": [
						"**/node_modules/**",
						"**/.git/**",
						"**/dist/**",
						"**/out/**",
						"**/.svn/**",
						"**/.hg/**",
						"**/CVS/**",
						"**/.idea/**",
						"**/.vscode/**",
						"**/.settings/**",
						"**/.metadata/**",
						"**/.history/**",
						"**/.backup/**",
						"**/.etc/**",
						"**/.cache/**",
						"**/.gradle/**",
						"**/.mvn/**",
						"**/bin/**",
						"**/build/**",
						"**/target/**",
						"**/logs/**",
						"**/.pytest_cache/**",
						"**/.scannerwork/**",
						"**/.terraform/**",
						"**/__pycache__/**",
						"**/.venv/**",
						"**/.classpath",
						"**/.project",
						"**/.factorypath",
						"**/.DS_Store",
						"**/Thumbs.db",
						"**/desktop.ini",
						"**/.coverage"
					],
					"items": {
						"type": "string"
					}
				},
				"Html-Js-Css-Analyzer.additionalExtensions": {
					"type": "array",
					"scope": "window",
					"default": [
						"html",
						"htm",
						"css",
						"scss"
					],
					"items": {
						"type": "string"
					}
				},
				"Html-Js-Css-Analyzer.htmlHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable HTML analysis and hints"
				},
				"Html-Js-Css-Analyzer.cssHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable CSS analysis and hints"
				},
				"Html-Js-Css-Analyzer.jsHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable JavaScript analysis and hints"
				},
				"Html-Js-Css-Analyzer.tsHint.enabled": {
					"type": "boolean",
					"scope": "window",
					"default": true,
					"description": "[Html-Css-Js-Analyzer] Enable/disable TypeScript analysis and hints"
				}
			}
		}
	},
	"scripts": {
		"watch": "tsc -watch -p .",
		"compile": "tsc -p .",
		"vsce": "tsc -p . && vsce package",
		"reset": "node .node/reset.cjs --npm",
		"autofix": "node .node/autofix.cjs",
		"gcloud": "node .node/gcloud.cjs"
	},
	"dependencies": {
		"@babel/core": "^7.28.4",
		"@types/jshint": "^2.12.4",
		"glob": "^11.0.3",
		"htmlhint": "^1.7.1",
		"jshint": "^2.13.6",
		"terser": "^5.44.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@types/glob": "^9.0.0",
		"@types/htmlhint": "^1.1.5",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.7.0",
		"@types/vscode": "^1.104.0",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.2",
		"rimraf": "^6.0.1"
	}
}
